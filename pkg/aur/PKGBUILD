# Maintainer: Snag Contributors <snag@example.com>
pkgname=snag-file-share
pkgver=0.1.0
pkgrel=1
pkgdesc='P2P file sharing from your terminal'
arch=('x86_64' 'aarch64')
url='https://github.com/Abzolute1/snag'
license=('MIT' 'Apache-2.0')
depends=()
makedepends=('cargo' 'rust')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "snag-$pkgver"
    GENERATE_COMPLETIONS=1 cargo build --release --locked
}

check() {
    cd "snag-$pkgver"
    cargo test --release --locked
}

package() {
    cd "snag-$pkgver"
    make install DESTDIR="$pkgdir" PREFIX=/usr
    install -Dm644 LICENSE-MIT "$pkgdir/usr/share/licenses/$pkgname/LICENSE-MIT"
    install -Dm644 LICENSE-APACHE "$pkgdir/usr/share/licenses/$pkgname/LICENSE-APACHE"
}
